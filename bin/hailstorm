#!/usr/bin/env jruby

# Initialization script for Hailstorm application

MAX_TRIES = 3
num_tries = 0
begin
  require "optparse"

  require "hailstorm/application"

  gem_path = nil

  options = OptionParser.new() do |opts|
    opts.banner =<<-BANNER
Initialization script for a Hailstorm application.

Usage
    #{$0} [options] <app-name>

Example

    hailstorm shopping_cart
    BANNER

    opts.separator ''
    opts.separator 'Options'

    opts.on("-gPATH", "--gem-path=PATH", "Specify path to Hailstorm gem") do |g|
      gem_path = g
    end

    opts.on_tail('-h', '--help', 'Show this help') do
      puts options.to_s
      exit 0
    end
  end

  options.parse!

  unless ARGV.empty?
    args = [Dir.pwd, ARGV.first, false]
    args << gem_path unless gem_path.nil?
    Hailstorm::Application.new.create_project(*args)
  else
    puts options.to_s
    puts ""
    abort("unspecified argument!")
  end

rescue Exception => e
  if num_tries < MAX_TRIES
    num_tries += 1
    hailstorm_path = File.expand_path('../../lib', __FILE__)
    $LOAD_PATH.unshift(hailstorm_path) if num_tries == 1
    retry
  else
    puts e.message
  end
end
