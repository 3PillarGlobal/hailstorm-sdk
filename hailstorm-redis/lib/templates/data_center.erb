    # Data Center Configuration
    <% data_centers_data.each do |data_center| %>
    config.clusters(:data_center) do |cluster|
        cluster.machines = <%= data_center['machines'] %>
        cluster.user_name = '<%= data_center['user_name'] %>'
        cluster.ssh_identity = '<%= data_center['ssh_identity_file_name'] %>'
        cluster.title = '<%= data_center['title'] %>'
    end

    <% end %>