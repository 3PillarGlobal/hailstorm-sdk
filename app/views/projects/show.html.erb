<div class="row">

  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Configuration</h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-6">
            <%= link_to "Test Plans", project_test_plans_path(@project) %> (<%= @project.test_plans.count %>)<br/>
            <%= link_to "Clusters", project_clusters_path(@project) %> (<%= @project.clusters.count %>)<br/>
            <%= link_to "Target Hosts", project_target_hosts_path(@project) %> (<%= @project.target_hosts.count %>)<br/>
          </div>

          <div class="col-md-6">
            <div>
              <%= link_to "setup", project_interpret_task_path(@project,:process => "setup"), class: ["btn","btn-primary", ("disabled" if(project_status(@project.status) != 'Configured' || params[:submit_action]))] %><br/>
            </div>
            <hr>
            <div>
              <%= link_to "Start ", project_interpret_task_path(@project,:process => "start"), class: ["btn", "btn-success", ("disabled" if(project_status(@project.status) == 'Tests Started' || @project.status < 3  || params[:submit_action]))] %>&nbsp;
              <%= link_to "Abort", project_interpret_task_path(@project,:process => "abort"), class: ["btn", "btn-warning", ("disabled" if(project_status(@project.status) != 'Tests Started' || params[:submit_action]))] %>&nbsp;
              <%= link_to "Results", project_interpret_task_path(@project,:process => "results"), class: ["btn", "btn-success", ("disabled" if(project_status(@project.status) != 'Tests Stopped'))] %>&nbsp;
            </div>
            <hr>
            <div>
              <%= link_to "Terminate", project_interpret_task_path(@project,:process => "terminate"), class: ["btn", "btn-danger", ("disabled" if(@project.status < 3  || params[:submit_action]))] %><br/>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Project Logs</h3>
      </div>

      <div class="panel-body logs-console">
        <div class="row">
          <div class="col-md-12" id="logsResults">
            <%= simple_format(@logs) %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<p><%= link_to "Back to Projects", params[:page].blank? ? projects_path():projects_path(:page=>params[:page]) %></p>

<script type="text/javascript">
    refreshLogs('<%= project_read_logs_path(@project) %>');
</script>