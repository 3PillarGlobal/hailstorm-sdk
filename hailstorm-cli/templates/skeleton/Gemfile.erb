gem "<%= gem.name %>", :path => "<%= gem.path %>"
<%- end %>
<%- else -%>
gem "hailstorm"
gem "hailstorm-cli"
<%- end -%>
gem "activerecord-jdbcmysql-adapter"
<%- if @jruby_pageant %>
gem "jruby-pageant", "= 1.1.1"
<%- end %>
